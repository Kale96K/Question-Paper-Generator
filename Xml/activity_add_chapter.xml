<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/adminloginbackground"
    tools:context="com.example.rushikesh.questionpapergenerator3.AddChapter">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAddChapterStream">
    </Spinner>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/spinnerAddChapterSem">
    </Spinner>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/spinnerAddChapterSubject">
    </Spinner>

    <EditText
        android:id="@+id/etChapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter CHAPTER..."
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/loginbuttoncolor"
        android:layout_marginTop="30dp"
        android:onClick="addChapterDone"
        android:text="DONE"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        />
</LinearLayout>
