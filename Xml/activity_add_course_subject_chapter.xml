<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/adminloginbackground"
    tools:context="com.example.rushikesh.questionpapergenerator3.AddCourseSubjectChapter">

    <Button
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/loginbuttoncolor"
        android:onClick="addCourse"
        android:text="ADD COURSE"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbuttoncolor"
        android:onClick="addSubject"
        android:text="ADD SUBJECT"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbuttoncolor"
        android:onClick="addChapter"
        android:text="ADD CHAPTER"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        />

</LinearLayout>
